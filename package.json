{
  "name": "d4-helper",
  "version": "2.1.0",
  "description": "Diablo 4 Helper - Sanctuary Edition",
  "author": "WAYNE",
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "electron:dev": "bun run build:electron && concurrently \"vite\" \"wait-on http://localhost:5173 && set NODE_ENV=development&& electron .\"",
    "electron:dev:app": "set NODE_ENV=development&& bun run build:electron && electron .",
    "electron:build": "bun run build && bun run build:electron && electron-builder --win --x64",
    "preview": "vite preview",
    "start": "bun run build:electron && electron ."
  },
  "build": {
    "appId": "com.vivecoding.d4helper",
    "productName": "D4 Helper",
    "copyright": "Copyright Â© 2024 WAYNE",
    "icon": "build/icon.ico",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "portable": {
      "artifactName": "D4Helper_v${version}.${ext}"
    },
    "nsis": {
      "artifactName": "D4Helper_Setup_v${version}.${ext}",
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "asarUnpack": [
      "node_modules/koffi"
    ],
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "output": "release"
    }
  },
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.6",
    "electron-store": "^8.1.0",
    "framer-motion": "^10.16.0",
    "i18next": "^23.7.0",
    "koffi": "^2.14.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "jimp": "^1.6.0",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.15",
    "wait-on": "^7.2.0"
  }
}
